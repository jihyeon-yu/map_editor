<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과 -->
    <item>
        <shape>
            <solid android:color="#333333" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <!-- 경계선 -->
    <item>
        <shape>
            <stroke
                android:width="3dp"
                android:color="#FFFFFF33" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <!-- 내부 배경 -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

</layer-list>
