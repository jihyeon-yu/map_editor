<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경색 설정 -->
    <solid android:color="#000000" />

    <!-- 테두리 설정 (선택 사항) -->
    <stroke
        android:width="3px"
        android:color="#5ADAC6" />

    <!-- 모서리 반경 설정 -->
    <corners android:radius="5dp" />

    <!-- 패딩 설정 (선택 사항) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
