<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_toggle_bar"
    >

    <ImageView
        android:id="@+id/fabMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_toggle_bar"
        android:contentDescription="@null"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 구분선 -->
    <LinearLayout
        android:id="@+id/layout_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fabMain"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <ImageView
            android:id="@+id/fabAddObject"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/baseline_add_24" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 생성 완료 -->
        <TextView
            android:id="@+id/fabSelectObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="생성 완료"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 생성 완료 -->
        <TextView
            android:id="@+id/fabMoveObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="영역 수정"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 핀 이동 -->
        <TextView
            android:id="@+id/fabMovePin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="핀 이동"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 핀 회전 -->
        <TextView
            android:id="@+id/fabRotatePin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="핀 회전"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 삭제 -->
        <TextView
            android:id="@+id/fabDeleteObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="삭제"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="#7D7D7D" />

        <!-- 삭제 -->
        <TextView
            android:id="@+id/fabRenameObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingHorizontal="10dp"
            android:text="이름 편집"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
