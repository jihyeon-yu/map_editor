<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_toggle_bar"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <!-- 접기 버튼 -->
        <ImageView
            android:id="@+id/fabMainBackCS"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="접기" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <ImageView
            android:id="@+id/fabAddObjectCS"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_add_24"
            android:contentDescription="추가" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 핀 이동 -->
        <TextView
            android:id="@+id/fabMovePinCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="핀 이동"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 핀 회전 -->
        <TextView
            android:id="@+id/fabRotatePinCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="핀 회전"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

        <!-- 구분선 -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#7D7D7D" />

        <!-- 이름 편집 -->
        <TextView
            android:id="@+id/fabRenameObjectCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 편집"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>