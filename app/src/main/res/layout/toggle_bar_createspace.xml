<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="40dp"
    android:background="@drawable/rounded_toggle_bar"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- 접기 버튼 -->
    <ImageView
        android:id="@+id/fabMainBackCS"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:contentDescription="접기"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <!-- 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7D7D7D" />

    <ImageView
        android:id="@+id/fabAddObjectCS"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="생성 완료"
        android:src="@drawable/baseline_add_24" />

    <!-- 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7D7D7D" />

    <!-- 생성 완료 -->
    <TextView
        android:id="@+id/fabSelectObjectCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성 완료"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7D7D7D" />

    <!-- 생성 완료 -->
    <TextView
        android:id="@+id/fabMoveObjectCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영역 수정"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />


    <!-- 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7D7D7D" />

    <!-- 핀 이동 -->
    <TextView
        android:id="@+id/fabMovePinCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핀 이동"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7D7D7D" />

    <!-- 핀 회전 -->
    <TextView
        android:id="@+id/fabRotatePinCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핀 회전"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7D7D7D" />

    <!-- 삭제 -->
    <TextView
        android:id="@+id/fabDeleteObjectCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#7D7D7D" />

    <!-- 이름 편집 -->
    <TextView
        android:id="@+id/fabRenameObjectCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 편집"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</LinearLayout>
